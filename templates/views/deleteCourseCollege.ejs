<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>College Admission System</title>
    <style>
    </style>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="css/all.css">
    <!-- Google Fonts -->
    <link rel="stylesheet" href="css/roboto.css">
    <!-- Bootstrap core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <!-- page heading -->
    <h1 class="display-3 text-center bg-light p-2 mb-0">College Admission System</h1>

    <!-- including admin navbar -->
    <%- include('partials/adminNavbar',{title:title}); %>

    <div class="container">

        <!-- checking for getting choice or not -->
        <% if(taskNumber>=3){ %> 

        <!-- main card for ban -->
        <div class="col-9 card mx-auto m-5">

            <!-- card heading -->
            <div class="card-header text-center text-white m-3 p-2 rounded bg-dark lead">
                <i class="fa fa-trash"></i> Delete A Course From a College
            </div>

            <div class="card-body">

                <div class="row">

                    <div class="col-3">
                        <i class="fa-10x text-danger fas fa-ban"></i>
                    </div>

                    <div class="col-9 my-auto">
                        <div class="lead" style="font-size: 35px;">
                            You Cannot Delete a Course Right Now!
                            Since we are getting Choices from Students.
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <% }else{ %>

        <!-- card for delete course -->
        <div class="card m-5 col-9 mx-auto">

            <!-- including alert success if needed -->
            <% if (typeof success!='undefined') { %>
                <div class="mt-3">
                    <%- include('partials/alertSuccess',{title:success.title,content:success.content}) %> 
                </div>
            <% } %>

            <!-- including alert error if needed -->
            <% if (typeof error!='undefined') { %>
                <div class="mt-3">
                    <%- include('partials/alertError',{title:error.title,content:error.content}) %> 
                </div>
            <% } %>

            <!-- card heading -->
            <div class="card-header bg-dark rounded m-3 p-2 text-white text-center lead">
                <i class="fa fa-trash"></i> Delete A Course From College
            </div>

            <div class="card-body">

                <!-- form for delete course from college -->
                <form action="/db/deleteCourseCollege" method="POST" enctype="application/x-www-form-urlencoded">

                    <div class="form-group">

                        <label for="collegeCode" class="lead">&nbsp;Select A College</label>
                        <select name="collegecode" required id="collegeCode" class="form-control">
                            <option selected disabled>Select a College</option>

                            <!-- select option from colleges list -->
                            <% for(let college of colleges){ %>
                            <option value="<%=college.collegecode %>"><%=college.collegename %></option>
                            <% } %> 

                        </select>

                    </div>

                    <!-- courses select option included using js -->
                    <div class="form-group" id="courses"></div>

                    <div class="form-group col-6 mx-auto mt-4">
                        <button type="submit" class="btn btn-block btn-primary"><i class="fa fa-trash"></i> Delete Course From College</button>
                    </div>

                </form>

            </div>
        </div>
        <% } %> 
    </div>
    <!-- page specific js -->
    <script src="js/deleteCourseCollege.js"></script>

    <!-- libraries for bootstrap -->
    <script src="js/jquery.min.js"></script>
    <script src="js/popper.min.js" ></script>
    <script src="js/bootstrap.min.js"></script>
</body>
</html>