<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>College Admission System</title>

    <style>

        /* Style for pagination buttons */
        .pagination > li > a
        {
            background-color: white;
            color: #dc3545;
        }

        .pagination > li > a:focus,
        .pagination > li > a:hover,
        .pagination > li > span:focus,
        .pagination > li > span:hover
        {
            color: #5a5a5a;
            background-color: #eee;
            border-color: #ddd;
        }

        .pagination > .active > a
        {
            color: white;
            background-color: #dc3545 !Important;
            border: solid 1px #dc3545 !Important;
        }

        .pagination > .active > a:hover
        {
            background-color: #dc3545 !Important;
            border: solid 1px #dc3545;
        }
    </style>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="css/all.css">
    <!-- Google Fonts -->
    <link rel="stylesheet" href="css/roboto.css">
    <!-- Bootstrap core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <!-- Page heading -->
    <h1 class="display-3 text-center bg-light p-2 mb-0">College Admission System</h1>

    <!-- including admin navbar -->
    <%- include('partials/adminNavbar',{title:title}); %>

    <div class="container">

        <!-- main card for showing admitted student -->
        <div class="m-5 card">

            <!-- Card heading -->
            <div class="card-header text-white text-center bg-dark m-3 p-2 lead rounded">
                Admitted Students Details
            </div>

            <div class="card-body m-2 p-2">

                <!-- Table for admitted students -->
                <table class="table table-striped table-bordered">

                    <!-- thead for table -->
                    <thead class="thead-light">
                        <tr>
                            <th>Rank</th>
                            <th>Student ID</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Alloted College</th>
                            <th>Alloted Course</th>
                        </tr>
                    </thead>

                    <!-- Check for students -->
                    <% if(typeof students!='undefined'){ %>
                    <!-- add table data -->
                    <% for(let student of students){ %>
                        <tr>
                            <td><%= student.rank %></td>
                            <td><%= student.studentid %></td>
                            <td><%= student.fname %></td>
                            <td><%= student.lname %></td>
                            <td><%= student.collegename %></td>
                            <td><%= student.coursename %></td>
                        </tr>
                    <% } %>
                    <% } %>

                </table>
            </div>

            <!-- pagination div -->
            <div class="m-2">

                <!-- navbar for pagination -->
                <nav aria-label="Page navigation example">

                    <!-- list of buttons for page -->
                    <ul class="pagination justify-content-center">

                        <!-- list icon for left button -->
                        <li class="page-item <% if(page-1==0){  %><%-'disabled' %> <% } %>  ">
                            <a class="page-link" href="?page=<%= page-1 %> " aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>

                        <!-- list icon for each buttons -->
                        <% for(let i=1;i<=totalPages;i++){ %> 
                                <% if (page===i) { %>
                                    <li class="page-item active"><a class="page-link" href="?page=<%= i %>"><%= i %> </a></li>
                                <% }else{ %>
                                    <li class="page-item"><a class="page-link" href="?page=<%= i %>"><%= i %> </a></li>
                                <% } %> 
                        <% } %>

                        <!-- list icon for right button -->
                        <li class="page-item <% if(page+1>totalPages){  %><%-'disabled' %> <% } %>">
                            <a class="page-link" href="?page=<%= page+1 %> " aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>

                    </ul>
                </nav>

            </div>
        </div>
    </div>    

    <!-- libraries for bootstrap -->
    <script src="js/jquery.min.js"></script>
    <script src="js/popper.min.js" ></script>
    <script src="js/bootstrap.min.js"></script>
</body>
</html>
